---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <!-- Navigation -->
  <nav class="navbar">
    <div class="nav-container">
      <div class="nav-logo">
        <span class="logo-text">CommandOSS</span>
        <div class="logo-glow"></div>
      </div>
      <div class="nav-links">
        <a href="#home" class="nav-link">Home</a>
        <a href="#about" class="nav-link">About</a>
        <a href="#solutions" class="nav-link">Solutions</a>
        <a href="#community" class="nav-link">Community</a>
        <a href="#contact" class="nav-link">Contact</a>
      </div>
      <div class="nav-toggle">
        <span></span>
        <span></span>
        <span></span>
      </div>
    </div>
  </nav>

  <!-- Hero Section -->
  <section id="home" class="hero">
    <div class="hero-background">
      <div class="grid-overlay"></div>
      <div class="particles"></div>
    </div>
    <div class="hero-content">
      <div class="hero-text">
        <h1 class="hero-title">
          <span class="title-line">Pioneering the</span>
          <span class="title-line gradient-text">Future of Blockchain</span>
          <span class="title-line">Development</span>
        </h1>
        <p class="hero-subtitle">
          Backed by <strong>Mysten Labs</strong>, CommandOSS transforms the
          software industry through advanced Sui blockchain solutions,
          empowering talent pools and inspiring innovation across government,
          enterprise, and startup ecosystems.
        </p>

        <div class="hero-features">
          <div class="feature-item">
            <div class="feature-icon">üöÄ</div>
            <div class="feature-content">
              <h4>High Performance</h4>
              <p>10,000+ TPS with ultra-low fees</p>
            </div>
          </div>
          <div class="feature-item">
            <div class="feature-icon">üîí</div>
            <div class="feature-content">
              <h4>Enterprise Security</h4>
              <p>Advanced cryptography & privacy</p>
            </div>
          </div>
          <div class="feature-item">
            <div class="feature-icon">üåê</div>
            <div class="feature-content">
              <h4>Global Community</h4>
              <p>Nurturing talent worldwide</p>
            </div>
          </div>
        </div>

        <div class="hero-stats">
          <div class="stat">
            <span class="stat-number">500+</span>
            <span class="stat-label">Projects Built</span>
          </div>
          <div class="stat">
            <span class="stat-number">50+</span>
            <span class="stat-label">Countries</span>
          </div>
          <div class="stat">
            <span class="stat-number">10K+</span>
            <span class="stat-label">Developers</span>
          </div>
        </div>

        <div class="hero-buttons">
          <button
            class="btn btn-primary"
            onclick="window.location.href='#solutions'"
          >
            <span>Explore Solutions</span>
            <div class="btn-glow"></div>
          </button>
          <button
            class="btn btn-secondary"
            onclick="window.location.href='#community'"
          >
            <span>Join Community</span>
          </button>
        </div>

        <div class="hero-trust">
          <span class="trust-label">Trusted by industry leaders</span>
          <div class="trust-logos">
            <div class="trust-logo">Mysten Labs</div>
            <div class="trust-logo">Sui Foundation</div>
            <div class="trust-logo">Web3 Partners</div>
          </div>
        </div>
      </div>
      <div class="hero-visual">
        <div class="floating-card">
          <div class="card-glow"></div>
          <div class="code-snippet">
            <div class="code-header">
              <div class="dots">
                <span></span>
                <span></span>
                <span></span>
              </div>
              <span class="file-name">sui_protocol.move</span>
            </div>
            <div class="code-content">
              <div class="code-line">
                <span class="keyword">module</span>
                <span class="module">commandoss</span>::<span class="function"
                  >innovation</span
                >
                {}
                <div class="code-line">
                  <span class="keyword">public fun</span>
                  <span class="function">transform_industry</span>() {}
                  <div class="code-line">
                    <span class="comment">// Empowering the future</span>
                  </div>
                  <div class="code-line"></div>
                </div>
                <div class="code-line"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="scroll-indicator">
      <div class="scroll-arrow"></div>
      <span>Scroll to explore</span>
    </div>
  </section>

  <!-- About Section -->
  <section id="about" class="about">
    <div class="section-container">
      <div class="section-header">
        <h2 class="section-title">About CommandOSS</h2>
        <p class="section-subtitle">
          Backed by industry leaders, building the future
        </p>
      </div>
      <div class="about-content">
        <div class="about-card main-card">
          <div class="card-header">
            <div class="sui-logo"></div>
            <h3>Backed by Mysten Labs</h3>
          </div>
          <p>
            CommandOSS is supported by Mysten Labs, the founding team behind Sui
            Network - one of the world's leading Layer-1 blockchain platforms,
            renowned for high-speed transactions, low fees, and exceptional
            scalability.
          </p>
        </div>
        <div class="stats-grid">
          <div class="stat-card">
            <div class="stat-number">10,000+</div>
            <div class="stat-label">TPS Capability</div>
          </div>
          <div class="stat-card">
            <div class="stat-number">$0.001</div>
            <div class="stat-label">Average Fee</div>
          </div>
          <div class="stat-card">
            <div class="stat-number">500+</div>
            <div class="stat-label">Projects Built</div>
          </div>
